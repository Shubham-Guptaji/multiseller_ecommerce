generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  User
  ADMIN
  SELLER
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  picture String @db.Text
  role Role @default(User)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
